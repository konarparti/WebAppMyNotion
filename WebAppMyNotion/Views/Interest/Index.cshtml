@model IEnumerable<Interest>
@{
    ViewData["Title"] = "Таблица";
}


<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-muted">Содержимое базы данных</h2>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <input class="mt-2 mb-2 form-control" type="text" placeholder="Поиск по таблице" id="search" onkeyup="tableSearch()"/>
        </div>
        <div class="offset-4 col-4 text-end">
            <a asp-controller="Interest" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-square"></i> &nbsp; Добавить новую запись
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="main-table" style="width: 100%">
        <thead class="text-center">
            <tr>
                <th>Название</th>
                <th>Тип</th>
                <th>Область</th>
                <th>Статус</th>
                <th>Прогресс</th>
                <th>Дата добавления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.Scope
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.Progress
                    </td>
                    <td>
                        @item.DateAdded
                    </td>
                    <td class="text-center">

                        <a asp-controller="Interest" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                            <i class="bi bi-pencil"></i> &nbsp; Изменить
                        </a>
                        <a asp-controller="Interest" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                            <i class="bi bi-trash3"></i> &nbsp; Удалить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>