@model IEnumerable<Interest>
@{
    ViewData["Title"] = "Таблица";
}


<div class="container p-3">
    <div class="row">
        <div>
            <h2 class="text-muted">Содержимое базы данных</h2>
        </div>
        <div class="col-1 text-end">
        </div>
    </div>
    <br />
    <div class=" d-flex flex-row justify-content-between align-items-baseline mb-2">
        <div>
            <input class="form-control" type="text" placeholder="Поиск по таблице" id="search" onkeyup="tableSearch()"/>
        </div>
        <div class="text-end">
            <a asp-controller="Interest" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-square"></i> &nbsp; Добавить
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="main-table" style="width: 100%">
        <thead class="text-center">
            <tr>
                <th>Название</th>
                <th class="hide-on-phone">Тип</th>
                <th class="hide-on-phone">Область</th>
                <th>Статус</th>
                <th class="hide-on-phone">Прогресс</th>
                <th class="hide-on-phone">Дата добавления</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Interest" asp-action="ShowMore" asp-route-id="@item.Id">@item.Name</a>
                    </td>
                    <td class="hide-on-phone">
                        @item.Type
                    </td>
                    <td class="hide-on-phone">
                        @item.Scope
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td class="hide-on-phone">
                        @item.Progress
                    </td>
                    <td class="hide-on-phone">
                        @item.DateAdded
                    </td>
                    <td class="text-center">

                        <a asp-controller="Interest" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                            <i class="bi bi-pencil"></i> &nbsp; Изменить
                        </a>
                        <a asp-controller="Interest" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                            <i class="bi bi-trash3"></i> &nbsp; Удалить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>