@model IEnumerable<Interest>
@{
    ViewData["Title"] = "Таблица";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-muted">Содержимое базы данных</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Interest" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-square"></i> &nbsp; Добавить новую запись
            </a>
        </div>
    </div>
    <br/>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Название</th>
                <th>Тип</th>
                <th>Область</th>
                <th>Статус</th>
                <th>Прогресс</th>
                <th>Дата добавления</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.Scope
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.Progress
                    </td>
                    <td>
                        @item.DateAdded
                    </td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                            <a asp-controller="Interest" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mx-1"> <i class="bi bi-pencil"></i> &nbsp; Изменить</a>
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm mx-1">
                                 <i class="bi bi-trash3"></i> &nbsp; Удалить
                            </button>

                        </form>

                         
                            
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>