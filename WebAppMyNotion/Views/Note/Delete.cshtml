@model Note
@{
    ViewData["Title"] = "Удаление заметки";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-muted">Удаление заметки</h2>
        </div>
        <div class="row pb-2">
            <h4 class="text-muted">Вы уверены что хотите удалить заметку?</h4>
        </div>
        <div class="mb-3">
            <label class="text-muted">Название:</label>
            <label>@Model.Name</label>
        </div>
        <div class="mb-3">
            <label class="text-muted">Содержимое:</label>
            <label>@Model.Content</label>
        </div>
        <div class="mb-3">
            <label class="text-muted">Ссылки на другие заметки:</label>
            <label>@Model.Links</label>
        </div>

        <button type="submit" class="btn btn-danger" asp-controller="Note" asp-action="Delete">Удалить</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-success">Отмена</a>
    </div>
</form>

